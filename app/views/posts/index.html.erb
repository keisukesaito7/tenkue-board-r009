<div class="post_wrapper">
  <div class="post_wrapper__header">
    <h3>
      <span>投稿一覧</span>
    </h3>
  </div>
  <div class="post_wrapper__content">
    <ul class="post_wrapper__content__post_list">
      <% if @posts.count == 0 %>
        <li>まだ投稿されたスレッドはありません。</li>
      <% else %>
        <% @posts.each do |post| %>
          <li>
            <div class="post">
              <div class="post__top_box">
                <div class="post__top_box__name">
                  <span>投稿者：<%= post.user.name %></span>
                </div>
                <div class="post__top_box__time">
                  <span>投稿日時：<%= l post.created_at %></span>
                </div>
              </div>  
              <div class="post__middle_box">
                <span><%= post.content %></span>
              </div>
              <div class="post__bottom_box">
                <ul class="post__bottom_box__user_actions">
                  <li>
                    <i class="far fa-comment-alt"></i>
                    <span>コメント数</span>
                  </li>
                  <% if user_signed_in? %>
                    <% if post.already_liked?(current_user) %>
                      <li>
                        <%= link_to post_like_path(post), class: "post_action_btn post_liked", method: :delete do %>
                          <i class="fas fa-heart"></i>
                          <span><%= post.likes.count %></span>
                        <% end %>
                      </li>
                    <% else %>
                      <li>
                        <%= link_to post_likes_path(post), class: "post_action_btn", method: :post do %>
                          <i class="far fa-heart"></i>
                          <span><%= post.likes.count if post.likes.count > 0 %></span>
                        <% end %>
                      </li>
                    <% end %>
                  <% else %>
                    <li>
                      <%= link_to post_likes_path(post), class: "post_action_btn", method: :post do %>
                        <i class="far fa-heart"></i>
                        <span><%= post.likes.count if post.likes.count > 0 %></span>
                      <% end %>
                    </li>
                  <% end %>
                </ul>
                <% if user_signed_in? && current_user.id == post.user_id %>
                  <ul class="post__bottom_box__admin_actions">
                    <li>編集</li>
                    <li>削除</li>
                  </ul>
                <% end %>
              </div>
            </div>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>